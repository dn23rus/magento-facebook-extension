<config>
    <global>
        <modules>
            <Oggetto_Facebook>
                <version>1.0.2</version>
            </Oggetto_Facebook>
        </modules>
        <models>
            <oggetto_fb>
                <class>Oggetto_Facebook_Model</class>
            </oggetto_fb>
        </models>
        <blocks>
            <oggetto_fb>
                <class>Oggetto_Facebook_Block</class>
            </oggetto_fb>
        </blocks>
        <helpers>
            <oggetto_fb>
                <class>Oggetto_Facebook_Helper</class>
            </oggetto_fb>
        </helpers>
    </global>
    <default>
        <facebook>
            <like_button>
                <enabled>1</enabled>
                <send_button>0</send_button>
                <layout_style>standard</layout_style>
                <width>450</width>
                <show_faces>1</show_faces>
                <font>arial</font>
                <color_scheme>light</color_scheme>
                <verb>like</verb>
            </like_button>
        </facebook>
    </default>
    <frontend>
        <layout>
            <updates>
                <oggetto_fb>
                    <file>oggetto_fb.xml</file>
                </oggetto_fb>
            </updates>
        </layout>
        <routers>
            <customer>
                <args>
                    <modules>
                        <Oggetto_Facebook before="Mage_Customer">Oggetto_Facebook</Oggetto_Facebook>
                    </modules>
                </args>
            </customer>
        </routers>
    </frontend>
</config>

